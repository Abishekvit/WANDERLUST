<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-3">
            <br>
            <h3 style="font-size: 1.7rem;font-weight: 600;">Listing Details :</h3>
        </div>
        <div class="card col-6 offset-3 show-card">
        <img src=<%= listing.image %> class="card-img-top show-img" alt="listing-image">
        <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %></b><br><br>
                <%= listing.description %>
                <br> &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %>
                
            </p>
        </div>
        </div>
    </div>

    <div class="btns">
        <a href="/listing/<%= listing.id %>/edit" class="btn btn-danger col-1 offset-3">Edit</a>
        <br>
        <form action="/listing/<%= listing.id %>?_method=DELETE" method="post">
            <button class="btn btn-dark offset-4">Delete</button>
        </form>
    </div>
    
</body>